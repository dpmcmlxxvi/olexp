{
  "name": "olexp",
  "version": "0.3.2",
  "description": "OpenLayers Explorer is a JavaScript application that combines the power of OpenLayers 3 interactive mapping and the layout management of w2ui.",
  "author": {
    "name": "Daniel Pulido",
    "email": "dpmcmlxxvi@gmail.com"
  },
  "main": "dist/olexp.js",
  "module": "src/js/explorer.js",
  "unpkg": "dist/olexp.min.js",
  "jsdelivr": "dist/olexp.min.js",
  "scripts": {
    "build": "run-s lint bundle docs",
    "bundle": "run-s bundle:js bundle:css",
    "bundle:css": "run-s bundle:css:*",
    "bundle:css:cat": "shx cat src/css/*.css > dist/olexp.css",
    "bundle:css:min": "cleancss -o dist/olexp.min.css -O2 src/css/*.css",
    "bundle:js": "rollup --silent -c",
    "docs": "run-s docs:clean docs:build docs:mkdir docs:copy",
    "docs:build": "jsdoc -t ./node_modules/ink-docstrap/template -d docs/api -R readme.md -r src",
    "docs:clean": "shx rm -rf docs/api",
    "docs:copy": "shx cp docs/web/img/* docs/api/docs/web/img/",
    "docs:mkdir": "shx mkdir -p docs/api/docs/web/img/",
    "lint": "run-s lint:css",
    "lint:css": "stylelint 'src/css/*css'",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dpmcmlxxvi/olexp"
  },
  "bugs": {
    "url": "https://github.com/dpmcmlxxvi/olexp/issues"
  },
  "keywords": [
    "OpenLayers",
    "w2ui",
    "JavaScript",
    "application",
    "explorer"
  ],
  "devDependencies": {
    "browserify-istanbul": "^3.0.0",
    "clean-css-cli": "^4.3.0",
    "coveralls": "^3.0.0",
    "grunt": "^1.0.2",
    "grunt-browserify": "^5.3.0",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-csslint": "^2.0.0",
    "grunt-contrib-cssmin": "^2.2.0",
    "grunt-contrib-jshint": "^1.1.0",
    "grunt-contrib-uglify": "^3.3.0",
    "grunt-gh-pages": "^2.0.0",
    "grunt-git": "^1.0.9",
    "grunt-jsdoc": "^2.2.1",
    "grunt-mocha-phantom-istanbul": "^0.2.1",
    "grunt-release": "^0.14.0",
    "ink-docstrap": "^1.3.2",
    "jest": "^24.8.0",
    "jest-puppeteer": "^4.2.0",
    "jsdoc": "^3.5.5",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^1.17.0",
    "puppeteer-to-istanbul": "^1.2.2",
    "rollup": "^1.14.5",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-terser": "^5.0.0",
    "shx": "^0.3.2",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0"
  },
  "preferGlobal": false,
  "private": false,
  "license": "MIT"
}
